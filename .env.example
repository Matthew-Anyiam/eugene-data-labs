# Eugene Intelligence - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# API Keys
# ===========================================

# Anthropic API key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# Database
# ===========================================

# PostgreSQL connection string
# For local development: postgresql://user:password@localhost:5432/eugene
# For Supabase: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@localhost:5432/eugene

# ===========================================
# Application
# ===========================================

# Environment: development, staging, production
ENVIRONMENT=development

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Secret key for API key generation (generate a random string)
SECRET_KEY=your_secret_key_here

# ===========================================
# External Services (Optional)
# ===========================================

# Stripe for billing (optional for MVP)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Sentry for error tracking (optional)
SENTRY_DSN=

# ===========================================
# Rate Limiting
# ===========================================

# SEC EDGAR rate limit (requests per second)
SEC_RATE_LIMIT=10

# API rate limits by tier (requests per minute)
RATE_LIMIT_FREE=10
RATE_LIMIT_DEVELOPER=100
RATE_LIMIT_PRO=500
RATE_LIMIT_ENTERPRISE=2000
